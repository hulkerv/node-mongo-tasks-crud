  <div>
    <label for="">Write a title</label>
    <input type="text" name="title" id="title" placeholder="title"  class="form-control rounded-0 bg-dark text-white"/>
  </div>
  <div>
    <label for="description">Description</label>
    <textarea
      name="description"
      id="description"
      placeholder="description"
